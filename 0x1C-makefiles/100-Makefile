CC = gcc
SRC = main.c school.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) $(NAME) *~ .*~

oclean:
	$(RM) $(SRC:.c=.o)

fclean: clean
	$(RM) $(NAME)

re: fclean all

%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: all clean oclean fclean re
